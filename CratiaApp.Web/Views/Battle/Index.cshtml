@model IEnumerable<CratiaApp.Web.Models.BattleViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Battle", "AddBattle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Winner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Loser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rounds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RefereePointsWinner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RefereePointsLoser)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Winner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Loser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rounds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RefereePointsWinner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RefereePointsLoser)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBattle", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteBattle", new { id=item.Id })
        </td>
    </tr>
}

</table>
