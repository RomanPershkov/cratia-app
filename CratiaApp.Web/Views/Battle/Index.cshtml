@model IEnumerable<CratiaApp.Web.Models.BattleViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rounds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RefereePointsWinner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RefereePointsLoser)
        </th>
        <th>
            Boxer 1
        </th>
        <th>
            Boxer 2
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rounds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RefereePointsWinner)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RefereePointsLoser)
        </td>
        @foreach (var boxer in item.Boxers)
        {
            <td>
                @Html.DisplayFor(modelItem => boxer.Name + " " + boxer.Surname + (boxer.Name == item.Winner.Name && boxer.Surname == item.Winner.Surname ? (" (Winner)") : ""))
            </td>
        }
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
