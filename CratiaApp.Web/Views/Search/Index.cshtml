
@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Find Boxer</h4>
        <br />

        <input id="name" type="text" />
        <br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="win" value="@CratiaApp.Web.Models.Enums.BattleResult.Win">
            <label class="form-check-label" for="win">Winner</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="lose" value="@CratiaApp.Web.Models.Enums.BattleResult.Lose">
            <label class="form-check-label" for="lose">Loser</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="all" value="@CratiaApp.Web.Models.Enums.BattleResult.All">
            <label class="form-check-label" for="all">All</label>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}